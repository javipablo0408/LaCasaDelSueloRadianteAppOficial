<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaCasaDelSueloRadianteApp.LoginPage"
             Title=""
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray900}}">

    <Grid RowDefinitions="2*,3*,2*" 
          Padding="24">

        <!-- Logo y Título -->
        <VerticalStackLayout Grid.Row="0" 
                            VerticalOptions="Center" 
                            Spacing="20">
            <Image Source="onedrive_logo"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"/>

            <Label Text="La Casa del Suelo Radiante"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Contenido Principal -->
        <VerticalStackLayout Grid.Row="1" 
                            VerticalOptions="Center" 
                            Spacing="24">
            <Frame Style="{StaticResource CardFrame}">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Acceso Seguro"
                           Style="{StaticResource SectionTitle}"
                           HorizontalOptions="Center"/>

                    <Label Text="Utiliza tu cuenta de Microsoft para acceder a todos los documentos y datos de OneDrive de forma segura."
                           Style="{StaticResource BodyText}"
                           HorizontalTextAlignment="Center"/>

                    <Button x:Name="loginButton"
                            Text="Iniciar Sesión con Microsoft"
                            Style="{StaticResource PrimaryButton}"
                            BackgroundColor="#0078D4"
                            HeightRequest="52"
                            Margin="0,16,0,0"
                            Clicked="OnLoginClicked"/>
                </VerticalStackLayout>
            </Frame>

            <ActivityIndicator x:Name="loadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="{StaticResource Primary}"
                               HeightRequest="40"
                               WidthRequest="40"
                               HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Footer -->
        <VerticalStackLayout Grid.Row="2" 
                            VerticalOptions="End">
            <Label Text="© 2024 La Casa del Suelo Radiante"
                   TextColor="{StaticResource Gray500}"
                   FontSize="12"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>