<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaCasaDelSueloRadianteApp.LoginPage"
             Title=""
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray900}}">

    <ScrollView>
        <VerticalStackLayout Padding="32" 
                            Spacing="40" 
                            VerticalOptions="Center"
                            MinimumHeightRequest="600">

            <!-- Logo centrado -->
            <VerticalStackLayout Spacing="24" 
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                <Image Source="logo.png"
                       HeightRequest="180"
                       WidthRequest="180"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Botón de Login -->
            <VerticalStackLayout Spacing="20" 
                                HorizontalOptions="Center">
                <Frame Style="{StaticResource CardFrame}"
                       MaximumWidthRequest="350"
                       HorizontalOptions="Center">
                    <VerticalStackLayout Spacing="16">
                        <Label Text="Bienvenido"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray700}"
                               HorizontalOptions="Center"/>

                        <Button x:Name="loginButton"
                                Text="Iniciar Sesión con Microsoft"
                                Style="{StaticResource PrimaryButton}"
                                BackgroundColor="#0078D4"
                                HeightRequest="50"
                                Clicked="OnLoginClicked"/>
                    </VerticalStackLayout>
                </Frame>

                <ActivityIndicator x:Name="loadingIndicator"
                                   IsVisible="False"
                                   IsRunning="False"
                                   Color="{StaticResource Primary}"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Footer -->
            <Label Text="© 2025 La Casa del Suelo Radiante"
                   TextColor="{StaticResource Gray500}"
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>