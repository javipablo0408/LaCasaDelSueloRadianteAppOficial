<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaCasaDelSueloRadianteApp.ClientesPage"
             Title=""
             BackgroundColor="{StaticResource Gray50}">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">
            <!-- Encabezado -->
            <VerticalStackLayout Grid.Row="0" Padding="20,16,20,0" Spacing="16">
                <Label Text="Gestión de Clientes" 
                       Style="{StaticResource PageTitle}" />
                <SearchBar Placeholder="Buscar cliente..." 
                           Text="{Binding FiltroBusqueda}" 
                           TextChanged="OnSearchBarTextChanged"
                           Style="{StaticResource ProfessionalSearchBar}" />
            </VerticalStackLayout>

            <!-- Lista de clientes -->
            <CollectionView Grid.Row="1" x:Name="ClientesCollectionView" 
                            SelectionMode="None" 
                            Margin="16,8,16,16"
                            ItemsSource="{Binding ClientesFiltrados}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{StaticResource CardFrame}" Margin="0,4,0,8">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <!-- Información del cliente -->
                                <VerticalStackLayout Grid.Column="0" Grid.RowSpan="3" Spacing="8">
                                    <Label Text="{Binding NombreCliente}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.NavegarAServicioCommand}" 
                                                                  CommandParameter="{Binding}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label Text="{Binding Email}" 
                                           Style="{StaticResource BodyText}"
                                           FontSize="14" />
                                    <Label Text="{Binding Direccion}" 
                                           Style="{StaticResource BodyText}"
                                           FontSize="14" />
                                </VerticalStackLayout>

                                <!-- Botones de acción -->
                                <VerticalStackLayout Grid.Column="1" Grid.RowSpan="3" VerticalOptions="Center" Spacing="12">
                                    <Button Text="Editar"
                                            Style="{StaticResource SecondaryButton}"
                                            WidthRequest="90"
                                            FontSize="14"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditarCommand}"
                                            CommandParameter="{Binding}" />
                                    <Button Text="Eliminar"
                                            BackgroundColor="{StaticResource Error}"
                                            TextColor="White"
                                            FontSize="14"
                                            WidthRequest="90"
                                            CornerRadius="12"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EliminarCommand}"
                                            CommandParameter="{Binding}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Indicador de carga -->
            <ActivityIndicator Grid.Row="1"
                               IsRunning="{Binding IsCargando}" 
                               IsVisible="{Binding IsCargando}" 
                               Color="{StaticResource Primary}"
                               VerticalOptions="Center" 
                               HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>