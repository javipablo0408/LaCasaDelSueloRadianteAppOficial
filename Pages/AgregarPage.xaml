<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaCasaDelSueloRadianteApp.AgregarPage"
             Title="Nuevo servicio">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Agregar cliente y servicio"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Datos del cliente -->
            <Entry  x:Name="NombreEntry"           Placeholder="Nombre del cliente" />
            <Entry  x:Name="DireccionEntry"        Placeholder="Dirección" />
            <Entry  x:Name="EmailEntry"            Placeholder="Email"     Keyboard="Email" />
            <Entry  x:Name="TelefonoEntry"         Placeholder="Teléfono"  Keyboard="Telephone" />

            <!-- Datos del servicio -->
            <Picker x:Name="TipoServicioPicker"     Title="Tipo de servicio" />
            <Picker x:Name="TipoInstalacionPicker"  Title="Tipo de instalación" />
            <Picker x:Name="FuenteCalorPicker"      Title="Fuente de calor" />

            <!-- Valores analíticos -->
            <Entry x:Name="PhEntry"                  Placeholder="pH"                Keyboard="Numeric" />
            <Entry x:Name="ConductividadEntry"       Placeholder="Conductividad"     Keyboard="Numeric" />
            <Entry x:Name="ConcentracionInhibidorEntry"
                   Placeholder="Concentración inhibidor"
                   Keyboard="Numeric" />
            <Entry x:Name="TurbidezEntry"            Placeholder="Turbidez"          Keyboard="Numeric" />

            <!-- Fotos -->
            <Button Text="Adjuntar foto pH"              Clicked="OnAdjuntarPhFotoClicked" />
            <Button Text="Adjuntar foto conductividad"   Clicked="OnAdjuntarConductividadFotoClicked" />
            <Button Text="Adjuntar foto concentración"   Clicked="OnAdjuntarConcentracionFotoClicked" />
            <Button Text="Adjuntar foto turbidez"        Clicked="OnAdjuntarTurbidezFotoClicked" />

            <!-- Guardar -->
            <Button Text="Guardar"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    Clicked="OnGuardarClicked" />

        </StackLayout>
    </ScrollView>
</ContentPage>