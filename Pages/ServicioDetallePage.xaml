<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ctrls="clr-namespace:LaCasaDelSueloRadianteApp.Controls"
             x:Class="LaCasaDelSueloRadianteApp.ServicioDetallePage"
             Title="Detalle del Servicio">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Descargar" Order="Primary" Clicked="OnDownloadClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="10" Spacing="10">

                <Label Text="{Binding TipoServicio}" FontAttributes="Bold" FontSize="Large"/>
                <Label Text="{Binding Fecha, StringFormat='{0:dd/MM/yyyy HH:mm}'}"/>
                <Label Text="{Binding TipoInstalacion}"/>
                <Label Text="{Binding FuenteCalor}"/>

                <Label Text="Valores:" FontAttributes="Bold"/>
                <Label Text="{Binding ValorPh, StringFormat='pH: {0:F2}'}"/>
                <Label Text="{Binding ValorConductividad, StringFormat='Conductividad: {0:F2}'}"/>
                <Label Text="{Binding ValorConcentracion, StringFormat='Concentración: {0:F2}'}"/>
                <Label Text="{Binding ValorTurbidez, StringFormat='Turbidez: {0:F2}'}"/>

                <Label Text="Imágenes:" FontAttributes="Bold"/>

                <HorizontalStackLayout Spacing="10">
                    <ctrls:MiniImg Url="{Binding FotoPhUrl}" Tapped="OnImgTapped"/>
                    <ctrls:MiniImg Url="{Binding FotoConductividadUrl}" Tapped="OnImgTapped"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10">
                    <ctrls:MiniImg Url="{Binding FotoConcentracionUrl}" Tapped="OnImgTapped"/>
                    <ctrls:MiniImg Url="{Binding FotoTurbidezUrl}" Tapped="OnImgTapped"/>
                </HorizontalStackLayout>

                <ProgressBar x:Name="DownloadBar" IsVisible="False" HeightRequest="4"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>